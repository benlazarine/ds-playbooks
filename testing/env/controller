#! /bin/bash


main()
{
  if [ "$#" -lt 1 ]
  then
    printf 'Requires either "start" or "stop" as its first parameter\n' >&2
    return 1
  fi

  local baseDir=$(dirname $(readlink -f "$0"))
  local action="$1"

  . "$baseDir"/env.inc

  case "$action" in
    start)
      local dcCmd='up -d'
      ;;
    stop)
      local dcCmd=down
      ;;
    *)
      printf 'Unknown command "%s"\n' "$action" >&2
      return 1
      ;;
  esac

  docker-compose --file "$baseDir"/docker-compose.yml --project-name "$PROJECT" $dcCmd
}


set -e

main "$@"
