#!/bin/bash
#
# An ansible module for managing a user group in iRODS.
#
# Module Name:
#  irods_group
#
# Required Variables:
#  name: The name of the group to create.


main()
{
  local varFile="$1"

  . "$varFile"
  require name

  local id
  id=$(quest "select USER_GROUP_ID where USER_GROUP_NAME = '$name'")

  if [ -z "$id" ]
  then
    local errMsg
    if ! errMsg=$(iadmin mkgroup "$name" 2>&1)
    then
      fail "$errMsg"
    fi

    succeed true
  fi

  succeed false
}


fail()
{
  local msg="$*"

  jq --compact-output --monochrome-output --null-input --arg msg "$msg" \
     '{failed: true, msg: $msg}'

  exit 1
}


quest()
{
  local query="$*"

  local response
  if ! response=$(iquest '%s' "$query")
  then
    fail "couldn't connect to iRODS"
  fi

  if ! [[ "$response" =~ ^CAT_NO_ROWS_FOUND ]]
  then
    printf '%s' "$response"
  fi
}


require()
{
  local var="$1"

  if [ -z "${!var}" ]
  then
    fail "variable '$var' must be defined"
  fi
}


succeed()
{
  local changed="$1"

  jq --compact-output --monochrome-output --null-input --arg changed "$changed" \
     '{changed: ($changed == "true")}'

  exit 0
}


main "$@"
