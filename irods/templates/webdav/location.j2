{# Generates a Location section for the apache config files #}
{% macro mk(def) -%}
{%   if def.comment is defined %}
{# assuiming the macro is already identited on level #}
# {{ def.comment | wordwrap(76, True, '\n  # ') }}
{%   endif %}
<Location "{{ def.path }}" >
{%   if def.extra_parameters is defined %}
  {{ def.extra_parameters | indent(2) | trim }}
{%   endif -%}
</Location>
{%- endmacro %}
